<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/txtUidTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo"/>
    <TextView
        android:id="@+id/txtUidTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/uid_title"
        android:textColor="@color/translucent_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgLogo"
        app:layout_constraintRight_toLeftOf="@id/edtUid"
        app:layout_constraintBottom_toTopOf="@id/txtPwdTitle"/>
    <EditText
        android:id="@+id/edtUid"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:backgroundTint="@color/translucent_red"
        android:ems="10"
        android:hint="@string/uid_hint"
        android:inputType="text"
        app:layout_constraintLeft_toRightOf="@id/txtUidTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtUidTitle"
        app:layout_constraintBottom_toBottomOf="@id/txtUidTitle"
        style="@style/TextInput"/>
    <TextView
        android:id="@+id/txtPwdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/pwd_title"
        android:textColor="@color/translucent_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtUidTitle"
        app:layout_constraintRight_toLeftOf="@id/edtPassword"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="@+id/txtUidTitle"/>
    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/translucent_red"
        android:ems="10" android:hint="@string/pwd_hint"
        android:inputType="textPassword"
        app:layout_constraintLeft_toRightOf="@id/txtPwdTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtPwdTitle"
        app:layout_constraintBottom_toBottomOf="@+id/txtPwdTitle"
        app:layout_constraintStart_toStartOf="@+id/edtUid"/>
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginbtn_title"
        android:backgroundTint="@color/translucent_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtPassword"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>